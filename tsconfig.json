{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                                
    "rootDir": "src",                                  
    "moduleResolution": "NodeNext",                     
    "outDir": "dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,
    "resolveJsonModule": true, 
    "allowSyntheticDefaultImports": true                           
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
